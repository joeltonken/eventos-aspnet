@model IEnumerable<EventosModel>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Eventos</h1>
        <a class="btn btn-success mx-2" asp-controller="Evento" asp-action="Cadastrar">Cadastrar novo evento</a>
    </div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">Contratante</th>
            <th scope="col">Empresa</th>
            <th scope="col">Evento</th>
            <th scope="col">Última Atualização</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @if(Model != null)
        {
            @foreach(var evento in Model)
            {
                <tr>
                    <th scope="row">@evento.Contratante</th>
                    <td>@evento.Empresa</td>
                    <td>@evento.Evento</td>
                    <td>@evento.dataUltimaAtualizacao</td>
                    <td>
                        <a asp-controller="Evento" asp-action="Editar" asp-route-id="@evento.Id" class="btn btn-warning mx-2">Editar</a>
                        <a asp-controller="Evento" asp-action="Excluir" asp-route-id="@evento.Id" class="btn btn-danger mx-2">Excluir</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
</div>