@model IEnumerable<EventosModel>

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <h1>Eventos</h1>
        
        <div>
            <a class="btn btn-success mx-2" asp-controller="Evento" asp-action="Exportar"><i class="bi bi-file-earmark-plus mx-2"></i>Exportar</a>
            <a class="btn btn-success mx-2" asp-controller="Evento" asp-action="Cadastrar"><i class="bi bi-file-earmark-plus mx-2"></i>Cadastrar novo evento</a>
        </div>
    </div>

    @if(TempData["MensagemSucesso"] != null)
    {
        <div class="alert alert-success text-light" role="alert">
            @TempData["MensagemSucesso"]
        </div>
    }

    @if (TempData["MensagemErro"] != null)
    {
        <div class="alert alert-danger text-light" role="alert">
            @TempData["MensagemErro"]
        </div>
    }


<table id="Eventos" class="table table-light table-hover mt-5">
    <thead>
        <tr>
            <th scope="col">Contratante</th>
            <th scope="col">Empresa</th>
            <th scope="col">Evento</th>
            <th scope="col">Última Atualização</th>
            <th></th>
        </tr>
    </thead>
    <tbody>

        @if(Model != null)
        {
            @foreach(var evento in Model)
            {
                <tr>
                    <th scope="row">@evento.Contratante</th>
                    <td>@evento.Empresa</td>
                    <td>@evento.Nome</td>
                    <td>@evento.dataUltimaAtualizacao</td>
                    <td>
                            <a asp-controller="Evento" asp-action="Editar" asp-route-id="@evento.Id" class="btn btn-warning mx-2"><i class="bi bi-pencil-square mx-2"></i>Editar</a>
                            <a asp-controller="Evento" asp-action="Excluir" asp-route-id="@evento.Id" class="btn btn-danger mx-2"><i class="bi bi-trash mx-2"></i>Excluir</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
</div>